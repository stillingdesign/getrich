{
  "name": "getrich",
  "version": "1.0.0",
  "description": "A boilerplate design system for marketing websites",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "start": "npm-run-all clean dev:css --parallel watch:*",
    "watch:html": "eleventy --serve",
    "dev:css": "tailwindcss -i src/assets/css/main.css -o dist/assets/css/main.css",
    "watch:css": "tailwindcss -i src/assets/css/main.css -o dist/assets/css/main.css --watch",
    "build:html": "eleventy",
    "build:css": "tailwindcss -i src/assets/css/main.css -o dist/assets/css/main.css --minify",
    "build": "run-s clean build:*"
  },
  "author": "Mike Stilling",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.4.10"
  }
}
